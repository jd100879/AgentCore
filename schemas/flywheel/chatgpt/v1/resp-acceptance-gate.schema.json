{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "flywheel.chatgpt.v1/resp-acceptance-gate.schema.json",
  "title": "ACCEPTANCE_GATE_RESPONSE (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["proto", "bead_id", "msg_type", "verdict", "acceptance", "next_actions"],
  "properties": {
    "proto": { "$ref": "common.schema.json#/$defs/proto" },
    "bead_id": { "$ref": "common.schema.json#/$defs/bead_id" },
    "msg_type": { "const": "ACCEPTANCE_GATE_RESPONSE" },
    "verdict": { "$ref": "common.schema.json#/$defs/verdict" },

    "acceptance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["passed", "evidence"],
      "properties": {
        "passed": { "type": "boolean" },
        "evidence": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "failed_reasons": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      }
    },

    "next_actions": {
      "type": "array",
      "items": { "$ref": "common.schema.json#/$defs/next_action" },
      "default": []
    },

    "notes": { "type": "string" }
  }
}
