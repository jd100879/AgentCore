{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "flywheel.chatgpt.v1/resp-spec-lock.schema.json",
  "title": "SPEC_LOCK_RESPONSE (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["proto", "bead_id", "msg_type", "verdict", "spec", "next_actions"],
  "properties": {
    "proto": { "$ref": "common.schema.json#/$defs/proto" },
    "bead_id": { "$ref": "common.schema.json#/$defs/bead_id" },
    "msg_type": { "const": "SPEC_LOCK_RESPONSE" },
    "verdict": { "$ref": "common.schema.json#/$defs/verdict" },

    "spec": {
      "type": "object",
      "description": "Arbitrary locked spec payload (schema, API, event names, constraints).",
      "additionalProperties": true
    },
    "next_actions": {
      "type": "array",
      "items": { "$ref": "common.schema.json#/$defs/next_action" },
      "default": []
    },

    "notes": { "type": "string" }
  }
}
