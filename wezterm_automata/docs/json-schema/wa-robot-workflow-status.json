{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wezterm-automata.dev/schemas/wa-robot-workflow-status.json",
  "title": "WA Robot Workflow Status Response",
  "description": "Schema for the data field when calling 'wa robot workflow status <execution_id>'. Returns workflow execution status.",
  "type": "object",
  "required": ["execution_id", "workflow_name", "status"],
  "properties": {
    "execution_id": {
      "type": "string",
      "description": "Unique execution identifier"
    },
    "workflow_name": {
      "type": "string",
      "description": "Name of the workflow being executed"
    },
    "pane_id": {
      "type": "integer",
      "minimum": 0,
      "description": "Target pane ID"
    },
    "trigger_event_id": {
      "type": "integer",
      "description": "Event ID that triggered this execution"
    },
    "status": {
      "type": "string",
      "description": "Current execution status"
    },
    "message": {
      "type": "string",
      "description": "Human-readable status message"
    },
    "started_at": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp (ms) when execution started"
    },
    "completed_at": {
      "type": "integer",
      "description": "Unix timestamp (ms) when execution completed"
    },
    "current_step": {
      "type": "integer",
      "minimum": 0,
      "description": "Current step index (0-based)"
    },
    "total_steps": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of steps"
    },
    "plan": {
      "type": "object",
      "description": "Action plan for this workflow execution"
    },
    "created_at": {
      "type": "integer",
      "description": "Unix timestamp (ms) when plan was created"
    }
  },
  "additionalProperties": false
}
