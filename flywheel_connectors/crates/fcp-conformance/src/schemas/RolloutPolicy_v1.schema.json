{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fcp://schemas/rollout-policy/v1",
  "title": "FCP RolloutPolicy v1",
  "type": "object",
  "required": [
    "format",
    "schema_version",
    "canary_percent",
    "min_canary_duration_secs",
    "success_thresholds",
    "rollback_rules"
  ],
  "additionalProperties": false,
  "properties": {
    "format": { "const": "fcp-rollout-policy" },
    "schema_version": { "const": "1.0" },
    "canary_percent": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "min_canary_duration_secs": {
      "type": "integer",
      "minimum": 0
    },
    "success_thresholds": {
      "type": "object",
      "required": [
        "min_success_rate_bps",
        "max_error_rate_bps",
        "min_samples",
        "window_secs"
      ],
      "additionalProperties": false,
      "properties": {
        "min_success_rate_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "max_error_rate_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "min_samples": {
          "type": "integer",
          "minimum": 0
        },
        "window_secs": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "rollback_rules": {
      "type": "object",
      "required": [
        "max_error_rate_bps",
        "max_consecutive_failures",
        "min_samples",
        "window_secs",
        "auto_rollback"
      ],
      "additionalProperties": false,
      "properties": {
        "max_error_rate_bps": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10000
        },
        "max_consecutive_failures": {
          "type": "integer",
          "minimum": 1
        },
        "min_samples": {
          "type": "integer",
          "minimum": 0
        },
        "window_secs": {
          "type": "integer",
          "minimum": 0
        },
        "auto_rollback": {
          "type": "boolean"
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
